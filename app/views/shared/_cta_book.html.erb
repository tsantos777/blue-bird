
<section class="bg-slate-100">
    <div class="flex flex-col lg:flex-row lg:items-center pt-10 lg:py-10">
      <!--Text Section-->
      <div class="lg:w-1/2 flex flex-col justify-center items-center pb-10" x-data="{ 'showModal': false }" @keydown.escape="showModal = false">
        <p class="px-5 py-7 lg:px-32 text-center p-text">Still looking for more information on pilot training?</p>
        <h2 class="px-2 text-3xl text-center font-bold">Get Your <span class="text-ideal-blue">FREE</span> Pilot Training Guide Book!</h2>
        <p class="px-5 py-7 lg:px-32 text-center p-text">We've preapred this free booklet which explains everything you need to know for your pilot certificate.</p>
        <button class="btn-primary " @click="showModal = true">
          DOWNLOAD THE FREE BOOK
        </button>
        <!-- Modal -->
        <div
          class="fixed inset-0 z-30 flex items-center justify-center overflow-auto bg-black bg-opacity-50"
          x-show="showModal"
          x-cloak
        >
          <!-- Modal inner -->
          <div
              class="w-full lg:w-1/2 px-6 py-4 mx-auto text-left bg-white rounded shadow-lg"
              @click.away="showModal = false"
              x-transition:enter="motion-safe:ease-out duration-300"
              x-transition:enter-start="opacity-0 scale-90"
              x-transition:enter-end="opacity-100 scale-100"
          >
            <!-- Title / Close-->
            <div class="flex items-center justify-between pb-5">
              <h4 class="mr-3 text-black max-w-none"></h4>
              <button type="button" class="z-50 cursor-pointer" @click="showModal = false">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
            <!-- content -->
            <div>
              <%= turbo_frame_tag "frame4", class: "w-full" do %>
                <%= render "book_downloads/form" %>
              <%end%>
            </div>
          </div>
        </div>
      </div>
      <!--pic section-->
      <div class="lg:w-1/2">
        <div class="grid place-items-center">
          <%= image_tag "book-mockup.webp", alt: "Picture of our free how to be a pilot training guide"%>
        </div>
      </div>
    </div>
  </section>